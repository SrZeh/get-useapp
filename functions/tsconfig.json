{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // ✅ chave para ignorar tipos problemáticos em node_modules
    "skipLibCheck": true,

    // garante tipos de Node no ambiente de build
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"]
}
